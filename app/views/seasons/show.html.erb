<div class="all-card d-flex">
  <div class="card-group d-flex justify-content-between">
    <div id="card-add" class="card-group d-flex">
      <%= link_to new_season_clothe_path(@season) do %>
        <div id="card-add-shadow" class="card-trip" >
          <h1 class="plus-card-icone">+</h1>
          <p id="text-add">Ajouter un vêtement</p>
          <div  class="card-trip-infos">
            <div class="shadow-text">
              <p><br></p>
              <p ><strong></strong></p>
              <p><br></p>
            </div>
            <h2 class="card-trip-pricing"></h2>
          </div>
        </div>
      <% end %>
    </div>
    <% @clothes.each do |clothe| %>
      <%= link_to season_clothe_url(@season, clothe) do %>
        <div class="card-group d-flex">
          <div class="card-trip">
            <img src="http://tothefit.com//img/cms/Dessins%20Claire%20ALVERNHE/DESSIN%20HOMME/CASUAL/DESSIN-MCA104-CHINO%20SLIN%20PANT-DEVANT.jpg" />
            <div class="card-trip-infos">
              <div class="info-card-clothe">
                <p><strong><%= clothe.name %></strong></p>
                <p>ref. <%= clothe.reference %></p>
                <p><%= clothe.components[0].color %></p>
              </div>
              <h4 class="card-trip-pricing"><%= clothe.confection_cost %>€</h4>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

