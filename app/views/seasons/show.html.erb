<div class="main-container">
  <%= render "shared/sidebar"%>
  <div class="main-content">
    <%= render "shared/navbar"%>

    <div class="all-card d-flex">
      <div class="card-group d-flex">
        <div id="card-add" class="card-group d-flex">
        <%= link_to season_add_path(@season) do %>
          <div id="card-add-shadow" class="card-trip" >
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTxfIStRy2jw2pInDPCeSD3OUOF_WZgwCMFbQ&usqp=CAU" />
            <div  class="card-trip-infos">
              <div>
                <p><br></p>
                <p id="text-add"><strong>Ajouter un vêtement</strong></p>
                <p><br></p>
              </div>
              <h2 class="card-trip-pricing"></h2>
            </div>
          </div>
        <% end %>
      </div>
      <% @clothes.each do |clothe| %>
        <%= link_to season_clothe_url(@season, clothe) do %>
          <div class="card-group d-flex">
            <div class="card-trip">
              <img src="http://tothefit.com//img/cms/Dessins%20Claire%20ALVERNHE/DESSIN%20HOMME/CASUAL/DESSIN-MCA104-CHINO%20SLIN%20PANT-DEVANT.jpg" />
              <div class="card-trip-infos">
                <div>
                  <p><strong><%= clothe.name %></strong></p>
                  <p>reference <strong><%= clothe.reference %></strong></p>
                  <p><%= clothe.components[0].color %></p>
                </div>
                <h2 class="card-trip-pricing">PRI <%= clothe.confection_cost %>€</h2>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    </div>
  </div>
</div>
