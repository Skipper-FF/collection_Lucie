<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @factory.name %></h1>
      <table class="table table-bordered">
      <%= simple_form_for [@factory] do |f| %>
        <%= f.input :name %>
        <%= f.input :address%>
        <%= f.input :speciality%>
        <%= f.input :production_capacity, as: :integer%>
        <%= f.input :moq, as: :integer%>
        <%= f.input :rating, as: :integer%>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "See all factories", factories_path %>
    </div>
  </div>
</div>

