<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new cloth</h1>
      <%= simple_form_for [@season, @clothe] do |f| %>
        <%= f.input :name %>
        <%= f.input :reference %>
        <%= f.input :quantity, as: :integer %>
        <%= f.input :factory_id, as: :integer %>
        <%= f.input :session_id, as: :integer %>
        <%= f.input :pattern_id %>
        <%= f.input :confection_cost, as: :integer %>
        <%= f.input :total_cost, as: :integer %>
        <%= f.input :selling_price, as: :integer %>
        <%= f.input :beginning_date%>
        <%= f.input :ending_date%>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
