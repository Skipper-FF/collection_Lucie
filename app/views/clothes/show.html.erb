<div class="container">
  <div id="btn-back">
    <%= link_to "Retour à la collection", season_path(@season), class: 'btn btn-light'%>
  </div>
  <div class="show-clothe">
    <div class="info-left">
      <div class="main-cloth-infos">
        <%#= image_tag "http://tothefit.com//img/cms/Dessins%20Claire%20ALVERNHE/DESSIN%20HOMME/CASUAL/DESSIN-MCA104-CHINO%20SLIN%20PANT-DEVANT.jpg", class: "img-clothe" %>
        <%= cl_image_tag(@clothe.pattern.photo.key) %>
        <div class="main-cloth-main-infos">
          <h3><strong class="title-name"><%=  @clothe.name %></strong></h3>
          <p> <%= @clothe.season.name %></p>
          <p>Ref. <%= @clothe.reference %></p>
          <p>Produit par : <%= @clothe.factory.name %></p>
          <div class="cloth-color-tab">
            <div class="rond-couleur-show" style="background: <%= @clothe.main_fabric.color_hexadecimal %>"></div>
            <div class="cloth-color"><%= @clothe.main_fabric.color %></div>
          </div>
        </div>
      </div>
        <div class="button-show">
          <a class="btn btn-flat">Modifier</a>
        </div>
    </div>
    <div class="show-right">
    <h3>Données financières</h3>
      <div class="info-clothe">
        <div class="widget">
          <span class="total-widget"><strong>Prix de revient </strong></span>
          <h3><strong> <%= @clothe.total_cost %></strong><small> € HT / pièce </small></h3>
          <span class="total-widget-down">Coût total : <strong><%= number_with_delimiter @clothe.total_production_cost, delimiter: " " %> €</strong></span >
        </div>
        <div class="widget">
          <span class="total-widget"><strong>Quantités</strong></span>
          <h3><strong> <%= @clothe.quantity %> </strong></h3>
          <span class="total-widget-down">produites par <%= @clothe.factory.name %></span >
        </div>
        <div class="widget">

          <span class="total-widget"><strong>Prix de vente unitaire </strong></span>
          <h3 id="selling-price-trigger"><strong><%= @clothe.selling_price  %></strong><small> € TTC</small></h3>
          <%= simple_form_for [@clothe.season, @clothe], html: {class: "selling-price-form"} do |f| %>
            <div class="selling-price-box">
              <%= f.input :selling_price, label: false %>
              <div class="submit-selling-price"><i class="fas fa-check"></i></div>
            </div>
          <% end %>
          <span class="total-widget-down">CA total : <strong><%= number_with_delimiter @clothe.turnover, delimiter: " " %> €</strong></span>

        </div>
        <div class="widget">
          <span class="total-widget"> <strong>Taux de marge brute</strong></span>
          <h3 class="<%= "negative" if @clothe.margin_rate < 0 %>"><strong><%= @clothe.margin_rate %></strong> %</h3>
          <span class="total-widget-down"> <strong></strong> Marge brute : <span class="<%= "negative" if @clothe.margin_value < 0 %>"><%= number_with_delimiter @clothe.margin_value, delimiter: " " %> €</span></span>
          </div>
        </div>
      </div>
    </div>
     <%#= render 'costs_details' %>
    <%#= render 'compositions' %>
</div>
