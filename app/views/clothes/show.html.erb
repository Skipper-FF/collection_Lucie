<div class="container">
  <div id="btn-back">
    <%= link_to "Retour à la collection", season_path(@season), class: 'btn btn-light'%>
  </div>
  <div class="show-clothe">
    <div class="info-left">
      <div class="main-cloth-infos">
        <%= image_tag "http://tothefit.com//img/cms/Dessins%20Claire%20ALVERNHE/DESSIN%20HOMME/CASUAL/DESSIN-MCA104-CHINO%20SLIN%20PANT-DEVANT.jpg", class: "img-clothe" %>
        <div class="main-cloth-main-infos">
          <h3><strong class="title-name"><%=  @clothe.name %></strong></h3>
          <p>Saison Autumn Winter 2021
           Ref. LVHUSH</p>
          <p>Produit par : <%= @clothe.factory.name %></p>
          <span class="cloth-color"><%= @clothe.main_fabric.color %></span>
        </div>
      </div>
      <div class="clothe-details-grid">
          <p>Tissu principale</p>
          <p>Tissu secondaire</p>
          <p>Trims</p>
          
          <p>jeans</p>
          <p>denim</p>
          <p>métal</p>
       </div>
        <div class="button-show">
          <a class="btn btn-flat">Modifier</a>
        </div>
    </div>
    <div class="show-right">
      <div class="info-clothe">
        <div class="widget">
          <span class="total-widget">Coût total unitaire<span>
          <h3><strong>12 €</strong></h3>
          <span class="total-widget">140 000 € en cout total de production unitaire</span >
        </div>
        <div class="widget">
          <span class="total-widget">Quantité</span>
          <h3><strong>1000</strong></h3>
          <span class="total-widget">produit par AAC Textile</span >
        </div>
        <div class="widget">
          <span class="total-widget">Prix de vente</span>
          <h3><strong>45 €</strong></h3>
          <span class="total-widget">450 000 € de chiffre d’affaire estimé</span>
        </div>
        <div class="widget">
          <span class="total-widget">Taux de marge</span >
          <h3><strong>2,2 %</strong></h3>
          </div>
        </div>
      </div>
    </div>
</div>
