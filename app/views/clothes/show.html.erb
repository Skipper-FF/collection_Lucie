<div class="container">
  <div id="btn-back">
    <%= link_to "Retour à la collection", season_path(@season), class: 'btn btn-light'%>
  </div>
  <div class="show-clothe">
    <div class="info-left">
      <div class="main-cloth-infos">
        <%#= image_tag "http://tothefit.com//img/cms/Dessins%20Claire%20ALVERNHE/DESSIN%20HOMME/CASUAL/DESSIN-MCA104-CHINO%20SLIN%20PANT-DEVANT.jpg", class: "img-clothe" %>
        <%= cl_image_tag(@clothe.family.photo.key) %>
        <div class="main-cloth-main-infos">
          <h3><strong class="title-name"><%=  @clothe.name %></strong></h3>
          <p>Saison Autumn Winter 2021
           Ref. LVHUSH</p>
          <p>Produit par : <%= @clothe.factory.name %></p>
          <span class="cloth-color"><%= @clothe.main_fabric.color %></span>
        </div>
      </div>
        <div class="button-show">
          <a class="btn btn-flat">Modifier</a>
        </div>
    </div>
    <div class="show-right">
    <h3>Données financières</h3>
      <div class="info-clothe">
        <div class="widget">
          <span class="total-widget"><strong>Prix de revient </strong></span>
          <h3><strong> <%= @clothe.total_cost %></strong><small> € HT / pièce </small></h3>
          <span class="total-widget-down">Coût total : <strong><%= @clothe.total_production_cost %> K€</strong></span >
        </div>
        <div class="widget">
          <span class="total-widget"><strong>Quantités</strong></span>
          <h3><strong> <%= @clothe.quantity %> </strong></h3>
          <span class="total-widget-down">produites par AAC Textile</span >
        </div>
        <div class="widget">

          <span class="total-widget"><strong>Prix de vente unitaire </strong></span>
          <h3><strong><%= @clothe.selling_price  %></strong><small> € TTC</small></h3>
          <span class="total-widget-down">CA total : <strong><%= number_with_delimiter @clothe.turnover %> K€</strong></span>

        </div>
        <div class="widget">
          <span class="total-widget"> <strong>Taux de marge brute</strong></span>
          <h3><strong><%= @clothe.margin_rate %></strong> %</h3>
          <span class="total-widget-down"> <strong><%#= number_with_delimiter(@clothe.margin, delimiter: " ") %> </strong> Marge brute : <span><%= @clothe.margin_value %> K€ </span></span>
          </div>
        </div>
      </div>
    </div>
     <%#= render 'costs_details' %>
    <%#= render 'compositions' %>
</div>
